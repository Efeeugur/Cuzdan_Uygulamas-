                                            <strong>â‚º@installment.TotalAmount.ToString("N2")</strong>
                                        </div>
                                        <div class="col-md-3">
                                            <small class="text-muted d-block">AylÄ±k Ã–deme</small>
                                            <strong>â‚º@installment.MonthlyPayment.ToString("N2")</strong>
                                        </div>
                                        <div class="col-md-3">
                                            <small class="text-muted d-block">Kalan Taksit</small>
                                            <strong>@installment.RemainingInstallments / @installment.TotalInstallments</strong>
                                        </div>
                                        <div class="col-md-3">
                                            <small class="text-muted d-block">Sonraki Ã–deme</small>
                                            <strong>@installment.NextPaymentDate.ToString("dd MMM yyyy")</strong>
                                        </div>
                                    </div>

                                    <!-- Progress Bar -->
                                    <div class="progress-bar-custom mb-2">
                                        <div class="progress-fill" style="width: @(progressPercentage.ToString("F1"))%"></div>
                                    </div>
                                    <small class="text-muted">
                                        %@(progressPercentage.ToString("F1")) tamamlandÄ± 
                                        â€¢ Ã–denen: â‚º@installment.TotalPaid.ToString("N2")
                                        â€¢ Kalan: â‚º@installment.RemainingAmount.ToString("N2")
                                    </small>

                                    @if (installment.Category != null)
                                    {
                                        <div class="mt-2">
                                            <span class="badge bg-light text-dark">
                                                <i class="fas fa-tag me-1"></i>@installment.Category.Name
                                            </span>
                                        </div>
                                    }
                                </div>
                                <div class="col-auto">
                                    <div class="btn-group-vertical">
                                        @if (!installment.IsCompleted)
                                        {
                                            <a asp-action="Pay" asp-route-id="@installment.Id" 
                                               class="btn btn-sm btn-success mb-1">
                                                <i class="fas fa-credit-card me-1"></i>Ã–deme Yap
                                            </a>
                                        }
                                        <a asp-action="Details" asp-route-id="@installment.Id" 
                                           class="btn btn-sm btn-outline-primary mb-1">
                                            <i class="fas fa-eye me-1"></i>Detay
                                        </a>
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" 
                                                    data-bs-toggle="dropdown">
                                                <i class="fas fa-cog"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@installment.Id">
                                                    <i class="fas fa-edit me-2"></i>DÃ¼zenle</a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item text-danger" href="#" onclick="deleteInstallment(@installment.Id)">
                                                    <i class="fas fa-trash me-2"></i>Sil</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-body empty-state">
                        <i class="fas fa-shopping-cart fa-4x mb-3"></i>
                        <h4>HenÃ¼z taksit bulunmuyor</h4>
                        <p>Ä°lk taksitli alÄ±ÅŸveriÅŸinizi ekleyerek baÅŸlayÄ±n.</p>
