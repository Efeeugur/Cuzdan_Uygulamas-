@model Cüzdan_Uygulaması.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<style>
    :root {
        --bg: #f5f5f7;
        --card: #ffffff;
        --text: #1d1d1f;
        --muted: #6e6e73;
        --blue: #007aff;
        --danger: #ff3b30;
        --border: rgba(0, 0, 0, 0.08);
        --shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        --radius: 20px;
    }

    body {
        background: var(--bg);
        color: var(--text);
        font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Helvetica Neue", Arial, sans-serif;
    }

    .auth-wrap {
        min-height: calc(100vh - 80px);
        display: grid;
        place-items: center;
        padding: 40px 16px;
    }

    .auth-card {
        width: 100%;
        max-width: 420px;
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        overflow: hidden;
    }

    .auth-head {
        padding: 28px 28px 0 28px;
        text-align: center;
    }

    .apple-mark {
        width: 42px;
        height: 42px;
        margin: 0 auto 8px auto;
        display: block;
        color: var(--text);
    }

    .auth-title {
        font-weight: 700;
        letter-spacing: -.02em;
        margin: 0 0 4px 0;
    }

    .auth-sub {
        color: var(--muted);
        font-size: 0.95rem;
        margin: 0 0 8px 0;
    }

    .auth-body {
        padding: 24px 28px 28px 28px;
    }

    .form-label {
        font-weight: 600;
        font-size: .9rem;
        margin-bottom: 6px;
    }

    .form-control {
        appearance: none;
        width: 100%;
        height: 44px;
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 10px 12px;
        font-size: 1rem;
        background: #fff;
        color: var(--text);
        transition: box-shadow .2s ease, border-color .2s ease, transform .02s ease;
    }

    .form-control:focus {
        outline: none;
        border-color: color-mix(in srgb, var(--blue) 40%, #0000);
        box-shadow: 0 0 0 4px color-mix(in srgb, var(--blue) 20%, #0000);
    }

    .form-control::placeholder {
        color: #a1a1a6;
    }

    .mb-3 {
        margin-bottom: 16px;
    }

    .form-check {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 6px;
    }

    .form-check-input {
        width: 18px;
        height: 18px;
        border-radius: 6px;
        border: 1px solid var(--border);
    }

    .btn-primary {
        width: 100%;
        height: 48px;
        border: none;
        border-radius: 14px;
        background: #000;
        /* Apple buton stili */
        color: #fff;
        font-weight: 700;
        font-size: 1rem;
        letter-spacing: .01em;
        transition: transform .04s ease, filter .2s ease, opacity .2s ease;
    }

    .btn-primary:hover {
        filter: brightness(1.05);
    }

    .btn-primary:active {
        transform: translateY(1px);
    }

    .text-danger {
        color: var(--danger) !important;
        margin-top: 4px;
        font-size: .92rem;
    }

    .validation-summary-errors {
        background: #fff1f0;
        border: 1px solid #ffd1ce;
        color: #a81810;
        padding: 10px 12px;
        border-radius: 10px;
        margin-bottom: 12px;
        font-size: .95rem;
    }

    .auth-footer {
        text-align: center;
        color: var(--muted);
        font-size: .95rem;
        padding: 0 28px 28px 28px;
    }

    .auth-footer a {
        color: var(--blue);
        text-decoration: none;
        font-weight: 600;
    }

    .auth-footer a:hover {
        text-decoration: underline;
    }
</style>

<div class="auth-wrap">
    <div class="auth-card">
        <div class="auth-head">
            <h1 class="auth-title h3">Giriş Yap</h1>
            <p class="auth-sub">Hesabınıza güvenle erişin</p>
        </div>

        <div class="auth-body">
            <form asp-action="Login" method="post" novalidate>
                <input asp-for="ReturnUrl" type="hidden" />

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" inputmode="email" autocomplete="username"
                        placeholder="e-posta adresiniz" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" type="password" autocomplete="current-password"
                        placeholder="parolanız" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>

                <button type="submit" class="btn-primary">Giriş Yap</button>
            </form>
        </div>

        <div class="auth-footer">
            <p>Hesabınız yok mu? <a asp-action="Register">Kayıt Ol</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
