}

<style>
    :root {
        --bg: #f5f5f7;
        --card: #ffffff;
        --text: #1d1d1f;
        --muted: #6e6e73;
        --blue: #007aff;
        --green: #28a745;
        --red: #dc3545;
        --orange: #ff9500;
        --border: rgba(0, 0, 0, 0.08);
        --shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        --radius: 16px;
    }

    body {
        background: var(--bg);
        color: var(--text);
    }

    /* Header */
    .installment-header {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        padding: 24px;
        margin-bottom: 24px;
    }

    /* Cards */
    .installment-card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        transition: transform 0.2s ease, box-shadow 0.2s ease, border-color .2s ease;
        margin-bottom: 16px;
        overflow: hidden;
    }

    .installment-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
        border-color: color-mix(in srgb, var(--blue) 20%, var(--border));
    }

    .installment-card.completed {
        opacity: .9;
        border-left: 4px solid var(--green);
    }

    .installment-card.active {
        border-left: 4px solid var(--blue);
    }

    .installment-card.overdue {
        border-left: 4px solid var(--red);
    }

    /* Progress */
    .progress-bar-custom {
        height: 8px;
        background-color: #e9ecef;
        border-radius: 6px;
        overflow: hidden;
    }

    .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, var(--blue), var(--green));
        transition: width 0.3s ease;
    }

    /* Buttons */
    .btn-apple {
        background: #000;
        color: #fff;
        border: none;
        border-radius: 12px;
        padding: 10px 20px;
        font-weight: 700;
        transition: filter .2s ease, transform .04s ease;
    }

    .btn-apple:hover {
        filter: brightness(1.05);
    }

    .btn-apple:active {
        transform: translateY(1px);
    }

    /* Apple-esque action buttons (satÄ±r iÃ§i) */
    .btn-action {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        height: 36px;
        padding: 0 12px;
        border-radius: 12px;
        border: 1px solid var(--border);
        background: #f6f7fa;
        color: var(--text);
        font-weight: 600;
        line-height: 1;
        transition: background .2s ease, transform .04s ease, border-color .2s ease;
    }

    .btn-action i {
        font-size: 14px;
    }

    .btn-action:hover {
        background: color-mix(in srgb, var(--text) 7%, #f6f7fa);
    }

    .btn-action:active {
        transform: translateY(1px);
    }

    .btn-action--primary {
        border-color: color-mix(in srgb, var(--blue) 40%, var(--border));
        background: #eef6ff;
        color: #0b60d1;
    }

    .btn-action--primary:hover {
        background: #e3f0ff;
    }

    .btn-action--success {
        border-color: color-mix(in srgb, var(--green) 40%, var(--border));
        background: #edf9f1;
        color: #197a3a;
    }

    .btn-action--success:hover {
        background: #e3f6eb;
    }

    .btn-action--warn {
        border-color: color-mix(in srgb, #f59e0b 40%, var(--border));
        background: #fff8ee;
        color: #a16207;
    }

    .btn-action--warn:hover {
        background: #fff3e1;
    }

    .btn-action--danger {
        border-color: color-mix(in srgb, var(--red) 40%, var(--border));
        background: #fff6f6;
        color: #b91c1c;
    }

    .btn-action--danger:hover {
        background: #ffecec;
    }

    .actions-stack {
        display: flex;
        flex-direction: column;
        gap: 8px;
        align-items: flex-end;
    }

    /* Badges */
    .status-badge {
        padding: 4px 12px;
        border-radius: 999px;
        font-size: 0.85rem;
        font-weight: 700;
        border: 1px solid var(--border);
    }

    .status-active {
        background: #eaf3ff;
        color: #0b60d1;
    }

    .status-completed {
        background: #e8f5e8;
        color: #388e3c;
    }

    .status-overdue {
        background: #ffefef;
        color: #c62828;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: var(--muted);
    }
</style>

<div class="container-fluid px-4">
    <!-- Header -->
    <div class="installment-header">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="mb-0">ðŸ›’ Taksitli AlÄ±ÅŸveriÅŸler</h2>
                <p class="text-muted mb-0">Taksitli Ã¶demelerinizi takip edin ve yÃ¶netin</p>
            </div>
            <div class="col-auto">
                <div class="btn-group">
                    <a asp-action="Create" class="btn btn-apple">
                        <i class="fas fa-plus me-2"></i>Yeni Taksit
                    </a>
                    <a asp-action="Active" class="btn btn-action btn-action--primary">
                        <i class="fas fa-list"></i><span>Aktif Taksitler</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Stats -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-primary"><i class="fas fa-list fa-2x mb-2"></i></div>
                    <h6 class="text-muted">Toplam Taksit</h6>
                    <h4 class="text-primary">@Model.Count()</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-warning"><i class="fas fa-clock fa-2x mb-2"></i></div>
                    <h6 class="text-muted">Aktif Taksit</h6>
                    <h4 class="text-warning">@Model.Count(i => !i.IsCompleted)</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-success"><i class="fas fa-check-circle fa-2x mb-2"></i></div>
                    <h6 class="text-muted">Tamamlanan</h6>
                    <h4 class="text-success">@Model.Count(i => i.IsCompleted)</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-info"><i class="fas fa-money-bill-wave fa-2x mb-2"></i></div>
                    <h6 class="text-muted">Toplam Tutar</h6>
                    <h4 class="text-info">â‚º@Model.Sum(i => i.TotalAmount).ToString("N2")</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Installments List -->
    <div class="row">
        <div class="col-12">
            @if (Model.Any())
            {
                @foreach (var installment in Model.OrderBy(i => i.NextPaymentDate))
                {
                    var progressPercentage = installment.TotalInstallments > 0
                    ? ((double)(installment.TotalInstallments - installment.RemainingInstallments) /
                    installment.TotalInstallments) * 100
                    : 0;

                    var cardClass = installment.IsCompleted ? "completed" :
                    (installment.NextPaymentDate < DateTime.Now ? "overdue" : "active");

                    <div class="installment-card @cardClass">
                        <div class="card-body">
                            <div class="row align-items-center g-3">
                                <div class="col">
                                    <div class="d-flex align-items-center mb-2">
                                        <h5 class="mb-0 me-3">@installment.Description</h5>
                                        @if (installment.IsCompleted)
                                        {
                                            <span class="status-badge status-completed">
                                                <i class="fas fa-check me-1"></i>TamamlandÄ±
                                            </span>
                                        }
                                        else if (installment.NextPaymentDate < DateTime.Now)
                                        {
                                            <span class="status-badge status-overdue">
                                                <i class="fas fa-exclamation-triangle me-1"></i>GecikmiÅŸ
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="status-badge status-active">
                                                <i class="fas fa-clock me-1"></i>Aktif
                                            </span>
                                        }
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-md-3 col-6">
                                            <small class="text-muted d-block">Toplam Tutar</small>
                                            <strong>â‚º@installment.TotalAmount.ToString("N2")</strong>
                                        </div>
                                        <div class="col-md-3 col-6">
                                            <small class="text-muted d-block">AylÄ±k Ã–deme</small>
                                            <strong>â‚º@installment.MonthlyPayment.ToString("N2")</strong>
                                        </div>
                                        <div class="col-md-3 col-6">
                                            <small class="text-muted d-block">Kalan Taksit</small>
                                            <strong>@installment.RemainingInstallments / @installment.TotalInstallments</strong>
                                        </div>
                                        <div class="col-md-3 col-6">
                                            <small class="text-muted d-block">Sonraki Ã–deme</small>
                                            <strong>@installment.NextPaymentDate.ToString("dd MMM yyyy")</strong>
                                        </div>
                                    </div>

                                    <!-- Progress -->
                                    <div class="progress-bar-custom mb-2">
                                        <div class="progress-fill" style="width:@(progressPercentage.ToString("F1"))%"></div>
                                    </div>
                                    <small class="text-muted">
                                        %@(progressPercentage.ToString("F1")) tamamlandÄ±
                                        â€¢ Ã–denen: â‚º@installment.TotalPaid.ToString("N2")
                                        â€¢ Kalan: â‚º@installment.RemainingAmount.ToString("N2")
                                    </small>

                                    @if (installment.Category != null)
                                    {
                                        <div class="mt-2">
                                            <span class="badge bg-light text-dark">
                                                <i class="fas fa-tag me-1"></i>@installment.Category.Name
                                            </span>
                                        </div>
                                    }
                                </div>

                                <!-- Actions -->
                                <div class="col-auto">
                                    <div class="actions-stack">
                                        @if (!installment.IsCompleted)
                                        {
                                            <a asp-action="Pay" asp-route-id="@installment.Id"
                                                class="btn-action btn-action--success" title="Ã–deme Yap">
                                                <i class="fas fa-credit-card"></i><span>Ã–deme Yap</span>
                                            </a>
                                        }
                                        <a asp-action="Details" asp-route-id="@installment.Id"
                                            class="btn-action btn-action--primary" title="Detay">
                                            <i class="fas fa-eye"></i><span>Detay</span>
                                        </a>

                                        <div class="dropdown">
                                            <button class="btn-action" data-bs-toggle="dropdown" aria-expanded="false"
                                                title="DiÄŸer">
                                                <i class="fas fa-cog"></i><span>DiÄŸer</span>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li>
                                                    <a class="dropdown-item" asp-action="Edit" asp-route-id="@installment.Id">
                                                        <i class="fas fa-edit me-2"></i>DÃ¼zenle
                                                    </a>
                                                </li>
                                                <li>
                                                    <hr class="dropdown-divider" />
                                                </li>
                                                <li>
                                                    <a class="dropdown-item text-danger" href="#"
                                                        onclick="deleteInstallment(@installment.Id)">
                                                        <i class="fas fa-trash me-2"></i>Sil
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <!-- /Actions -->
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-body empty-state">
                        <i class="fas fa-shopping-cart fa-4x mb-3"></i>
                        <h4>HenÃ¼z taksit bulunmuyor</h4>
                        <p>Ä°lk taksitli alÄ±ÅŸveriÅŸinizi ekleyerek baÅŸlayÄ±n.</p>
                        <a asp-action="Create" class="btn btn-apple">
                            <i class="fas fa-plus me-2"></i>Ä°lk Taksitimi Ekle
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function deleteInstallment(id) {
            Swal.fire({
                title: 'Taksit Silinecek',
                text: 'Bu iÅŸlem geri alÄ±namaz!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Evet, Sil',
                cancelButtonText: 'Ä°ptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '/Installment/Delete/' + id;

                    const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                    if (tokenInput) {
                        const token = document.createElement('input');
                        token.type = 'hidden';
                        token.name = '__RequestVerificationToken';
                        token.value = tokenInput.value;
                        form.appendChild(token);
                    }

                    document.body.appendChild(form);
                    form.submit();
                }
            });
        }

        @if (TempData["Success"] != null)
            {
                <text>
                    Swal.fire({
                        icon: 'success',
                    title: 'BaÅŸarÄ±lÄ±!',
                    text: '@Html.Raw(TempData["Success"])',
                    timer: 3000,
                    showConfirmButton: false
                                    });
                </text>
        }
            @if (TempData["Error"] != null)
            {
                <text>
                    Swal.fire({
                        icon: 'error',
                    title: 'Hata!',
                    text: '@Html.Raw(TempData["Error"])'
                                    });
                </text>
        }
    </script>
}
