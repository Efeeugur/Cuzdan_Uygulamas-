@model Cüzdan_Uygulaması.BusinessLogic.DTOs.InstallmentDto
@{
    ViewData["Title"] = "Taksit Detayları";
    var simpleCategoryService = new Cüzdan_Uygulaması.BusinessLogic.Services.SimpleCategoryService();
    var interestRateService = new Cüzdan_Uygulaması.BusinessLogic.Services.CategoryInterestRateService(simpleCategoryService);
}

@section Styles {
    <link rel="stylesheet" href="~/css/shared.css" />
    <link rel="stylesheet" href="~/css/installment.css" />
}

<div class="container-fluid px-4">
    <div class="details-container">
        <!-- Success/Error Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success" role="alert">
                <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            </div>
        }

        <!-- Installment Details Card -->
        <div class="installment-card">
            <div class="card-header">
                <h2 class="mb-2">
                    <i class="bi bi-credit-card me-2"></i>
                    @Model.Description
                </h2>
                <p class="mb-0 opacity-75">Taksit Detayları ve Ödeme Geçmişi</p>
            </div>

            <div class="card-body">
                <!-- Overdue Warning -->
                @if (Model.NextPaymentDate < DateTime.Now && !Model.IsCompleted)
                {
                    <div class="overdue-warning">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <div>
                                <strong>Gecikmiş Ödeme!</strong>
                                <div class="small">Bu taksit @Model.NextPaymentDate.ToString("dd MMMM yyyy") tarihinde ödenmeliydi.</div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Progress Section -->
                <div class="progress-section">
                    <h6 class="section-title">
                        <i class="bi bi-graph-up form-icon"></i>
                        Ödeme Durumu
                    </h6>
                    @{
                        var progressPercentage = Model.TotalInstallments > 0 
                            ? ((double)(Model.TotalInstallments - Model.RemainingInstallments) / Model.TotalInstallments) * 100 
                            : 0;
                    }
                    <div class="progress-bar-custom">
                        <div class="progress-fill" style="width: @(progressPercentage.ToString("F1"))%"></div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <small>%@(progressPercentage.ToString("F1")) tamamlandı</small>
                        <small>@Model.RemainingInstallments / @Model.TotalInstallments taksit kaldı</small>
                    </div>
                </div>

                <!-- Basic Information -->
                <div class="info-section">
                    <h6 class="section-title">
                        <i class="bi bi-info-circle form-icon"></i>
                        Genel Bilgiler
                    </h6>
                    
                    <div class="info-row">
                        <span class="info-label">Durum:</span>
                        <span class="info-value">
                            @if (Model.IsCompleted)
                            {
                                <span class="status-badge status-completed">
                                    <i class="bi bi-check-circle me-1"></i>Tamamlandı
                                </span>
                            }
                            else
                            {
                                <span class="status-badge status-active">
                                    <i class="bi bi-clock me-1"></i>Aktif
                                </span>
                            }
                        </span>
                    </div>
                    
                    <div class="info-row">
                        <span class="info-label">Toplam Tutar:</span>
                        <span class="info-value amount-display">₺@Model.TotalAmount.ToString("N2")</span>
                    </div>
                    
                    <div class="info-row">
                        <span class="info-label">Aylık Ödeme:</span>
                        <span class="info-value">₺@Model.MonthlyPayment.ToString("N2")</span>
                    </div>
                    
                    @if (Model.InterestRate > 0)
                    {
                        <div class="info-row">
                            <span class="info-label">Faiz Oranı:</span>
                            <span class="info-value">
                                <span class="interest-badge">%@Model.InterestRate.ToString("N2")</span>
                                <small class="text-muted ms-2">(aylık)</small>
                            </span>
                        </div>
                    }
                    else
                    {
                        <div class="info-row">
                            <span class="info-label">Faiz Oranı:</span>
                            <span class="info-value text-success">
                                <i class="bi bi-check-circle me-1"></i>Faizsiz
                            </span>
                        </div>
                    }
                    
                    <div class="info-row">
                        <span class="info-label">Başlangıç Tarihi:</span>
                        <span class="info-value">@Model.StartDate.ToString("dd MMMM yyyy")</span>
                    </div>
                    
                    @if (!Model.IsCompleted)
                    {
                        <div class="info-row">
                            <span class="info-label">Sonraki Ödeme Tarihi:</span>
                            <span class="info-value 
                                @(Model.NextPaymentDate < DateTime.Now ? "text-danger" : "")">
                                @Model.NextPaymentDate.ToString("dd MMMM yyyy")
                            </span>
                        </div>
                    }
                    
                    <div class="info-row">
                        <span class="info-label">Ödenen Tutar:</span>
                        <span class="info-value text-success">₺@Model.TotalPaid.ToString("N2")</span>
                    </div>
                    
                    <div class="info-row">
                        <span class="info-label">Kalan Tutar:</span>
                        <span class="info-value text-danger">₺@Model.RemainingAmount.ToString("N2")</span>
                    </div>

                    @if (Model.CategoryId.HasValue)
                    {
                        <div class="info-row">
                            <span class="info-label">Kategori:</span>
                            <span class="info-value">
                                <span class="badge bg-light text-dark">
                                    @simpleCategoryService.GetCategoryName(Model.CategoryId.Value)
                                </span>
                            </span>
                        </div>
                    }
                </div>

                <!-- Interest Rate Information -->
                @if (Model.InterestRate > 0 && Model.CategoryId.HasValue)
                {
                    var rateInfo = interestRateService.GetRateInfo(Model.CategoryId.Value);
                    var comparison = interestRateService.CompareWithMarket(Model.CategoryId.Value, Model.InterestRate);
                    
                    <div class="info-section">
                        <h6 class="section-title">
                            <i class="bi bi-graph-up form-icon"></i>
                            Faiz Oranı Analizi
                        </h6>
                        
                        <div class="interest-info">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <strong>Piyasa Karşılaştırması:</strong>
                                <span class="badge @(comparison.IsGoodDeal ? "bg-success" : "bg-warning")">
                                    @(comparison.IsGoodDeal ? "İyi Anlaşma" : "Ortalamanın Üzerinde")
                                </span>
                            </div>
                            
                            <div class="market-comparison">
                                <div class="row">
                                    <div class="col-md-6">
                                        <small class="text-muted">Sizin Oranınız:</small>
                                        <div><strong>%@Model.InterestRate.ToString("N2")</strong></div>
                                    </div>
                                    <div class="col-md-6">
                                        <small class="text-muted">Piyasa Ortalaması:</small>
                                        <div><strong>%@comparison.MarketRate.ToString("N2")</strong></div>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <small class="fw-bold @(comparison.IsGoodDeal ? "text-success" : "text-warning")">
                                        @comparison.SavingsText
                                    </small>
                                </div>
                            </div>
                            
                            <div class="mt-3">
                                <small class="text-muted">
                                    <strong>Açıklama:</strong> @rateInfo.Explanation
                                </small>
                                <br>
                                <small class="text-muted">
                                    <strong>Kaynak:</strong> @rateInfo.RateSource
                                </small>
                            </div>
                        </div>
                    </div>
                }
                else if (Model.InterestRate == 0)
                {
                    <div class="info-section">
                        <h6 class="section-title">
                            <i class="bi bi-gift form-icon"></i>
                            Faizsiz Taksit
                        </h6>
                        <div class="alert alert-success mb-0">
                            <i class="bi bi-check-circle me-2"></i>
                            Bu taksit planı tamamen faizsizdir. Herhangi bir ek maliyet bulunmamaktadır.
                        </div>
                    </div>
                }

                <!-- Action Buttons -->
                <div class="row">
                    <div class="col-md-3 mb-2">
                        <a asp-action="Index" class="btn-secondary-action w-100">
                            <i class="bi bi-arrow-left me-2"></i>Geri Dön
                        </a>
                    </div>
                    @if (!Model.IsCompleted)
                    {
                        <div class="col-md-3 mb-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-edit-action w-100">
                                <i class="bi bi-pencil me-2"></i>Düzenle
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-action="Pay" asp-route-id="@Model.Id" class="btn-success-action w-100">
                                <i class="bi bi-credit-card me-2"></i>Ödeme Yap (₺@Model.MonthlyPayment.ToString("N2"))
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-9">
                            <div class="alert alert-success mb-0">
                                <i class="bi bi-check-circle me-2"></i>Bu taksit planı başarıyla tamamlanmıştır.
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Payment History -->
        @if (Model.Transactions.Any())
        {
            <div class="installment-card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i>
                        Ödeme Geçmişi (@Model.Transactions.Count() ödeme)
                    </h4>
                </div>
                <div class="card-body p-0">
                    <div class="transactions-table">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Tarih</th>
                                    <th>Tutar</th>
                                    <th>Açıklama</th>
                                    <th>Hesap</th>
                                    <th>İşlem Tarihi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var transaction in Model.Transactions.OrderByDescending(t => t.TransactionDate))
                                {
                                    <tr>
                                        <td>
                                            <strong>@transaction.TransactionDate.ToString("dd MMM yyyy")</strong>
                                            <br>
                                            <small class="text-muted">@transaction.TransactionDate.ToString("HH:mm")</small>
                                        </td>
                                        <td>
                                            <span class="text-success">
                                                <strong>₺@transaction.Amount.ToString("N2")</strong>
                                            </span>
                                        </td>
                                        <td>@transaction.Description</td>
                                        <td>
                                            @if (transaction.Account != null)
                                            {
                                                <span class="badge bg-light text-dark">@transaction.Account.Name</span>
                                            }
                                        </td>
                                        <td>
                                            <small class="text-muted">@transaction.CreatedDate.ToString("dd MMM yyyy HH:mm")</small>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="installment-card">
                <div class="card-body text-center py-5">
                    <i class="bi bi-receipt fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Henüz ödeme yapılmamış</h5>
                    <p class="text-muted">Bu taksit için henüz herhangi bir ödeme kaydı bulunmuyor.</p>
                    @if (!Model.IsCompleted)
                    {
                        <a asp-action="Pay" asp-route-id="@Model.Id" class="btn-success-action">
                            <i class="bi bi-credit-card me-2"></i>İlk Ödemeyi Yap
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/installment.js"></script>
}