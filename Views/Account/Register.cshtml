@model Cüzdan_Uygulaması.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}


<div class="auth-wrap">
    <div class="auth-card">
        <div class="auth-head">
            <h1 class="auth-title h3">Kayıt Ol</h1>
            <p class="auth-sub">Yeni hesabınızı dakikalar içinde oluşturun</p>
        </div>

        <div class="auth-body">
            <form asp-action="Register" method="post" novalidate>
                <div class="form-grid">
                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" autocomplete="given-name"
                            placeholder="adınız" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" autocomplete="family-name"
                            placeholder="soyadınız" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="mb-3 col-span-2">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" inputmode="email" autocomplete="email"
                            placeholder="e-posta adresiniz" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" type="password" autocomplete="new-password"
                            placeholder="parola" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password"
                            autocomplete="new-password" placeholder="parolayı doğrulayın" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="btn-primary">Kayıt Ol</button>
            </form>
        </div>

        <div class="auth-footer">
            <p>Zaten hesabınız var mı? <a asp-action="Login">Giriş Yap</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
