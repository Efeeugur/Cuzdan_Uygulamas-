@model C√ºzdan_Uygulamasƒ±.BusinessLogic.DTOs.AccountDto
@{
    ViewData["Title"] = $"{Model.Name} - Hesap Detaylarƒ±";
}

<style>
    :root {
        --bg: #f5f5f7;
        --card: #ffffff;
        --text: #1d1d1f;
        --muted: #6e6e73;
        --blue: #007aff;
        --green: #28a745;
        --red: #dc3545;
        --border: rgba(0, 0, 0, 0.08);
        --shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        --radius: 16px;
    }

    .account-header {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        padding: 24px;
        margin-bottom: 24px;
    }

    .balance-card {
        text-align: center;
        padding: 20px;
        border-radius: var(--radius);
        background: linear-gradient(135deg, var(--blue), #5AC8FA);
        color: white;
        margin-bottom: 20px;
    }

    .transaction-card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        margin-bottom: 12px;
    }

    .transaction-card:hover {
        transform: translateY(-1px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1);
    }

    .btn-apple {
        background: #000;
        color: white;
        border: none;
        border-radius: 12px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.2s ease;
    }

    .btn-apple:hover {
        background: #333;
        color: white;
        transform: translateY(-1px);
    }

    .income-indicator {
        color: var(--green);
    }

    .expense-indicator {
        color: var(--red);
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: var(--muted);
    }

    .account-info {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        padding: 20px;
        margin-bottom: 20px;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid var(--border);
    }

    .info-row:last-child {
        border-bottom: none;
    }

    .info-label {
        font-weight: 600;
        color: var(--muted);
    }

    .info-value {
        color: var(--text);
        font-weight: 500;
    }
</style>

<div class="container-fluid px-4">
    <!-- Header -->
    <div class="account-header">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="mb-1">üè¶ @Model.Name</h2>
                <p class="text-muted mb-0">@Model.Description</p>
            </div>
            <div class="col-auto">
                <div class="btn-group">
                    <a asp-controller="Transaction" asp-action="Create" asp-route-accountId="@Model.Id"
                        class="btn-primary-action">
                        <i class="bi bi-plus me-2"></i>Yeni ƒ∞≈ülem
                    </a>
                    <a asp-action="EditAccount" asp-route-id="@Model.Id" class="btn-edit-action">
                        <i class="bi bi-pencil me-2"></i>D√ºzenle
                    </a>
                    <a asp-action="Index" class="btn-secondary-action">
                        <i class="bi bi-arrow-left me-2"></i>Geri D√∂n
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Account Info -->
        <div>
            <div class="balance-card">
                <h5 class="mb-1">Mevcut Bakiye</h5>
                <h2 class="mb-0">‚Ç∫@Model.Balance.ToString("N2")</h2>
            </div>

            <div class="account-info">
                <h6 class="mb-3">Hesap Bilgileri</h6>
                <div class="info-row">
                    <span class="info-label">Hesap Adƒ±</span>
                    <span class="info-value">@Model.Name</span>
                </div>
                <div class="info-row">
                    <span class="info-label">A√ßƒ±klama</span>
                    <span class="info-value">@(string.IsNullOrEmpty(Model.Description) ? "Belirtilmemi≈ü" :
                                                Model.Description)</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Toplam ƒ∞≈ülem</span>
                    <span class="info-value">@Model.Transactions.Count()</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Olu≈üturma Tarihi</span>
                    <span class="info-value">@Model.CreatedDate.ToString("dd MMMM yyyy")</span>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="row">
                <div class="col-6 mb-3">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center py-3">
                            <div class="text-success">
                                <i class="bi bi-arrow-up fa-lg mb-1"></i>
                            </div>
                            <h6 class="text-muted mb-1">Toplam Gelir</h6>
                            <h6 class="text-success mb-0">
                                ‚Ç∫@Model.Transactions.Where(t => t.Type ==
                                                                C√ºzdan_Uygulamasƒ±.Models.TransactionType.Income).Sum(t => t.Amount).ToString("N2")
                            </h6>
                        </div>
                    </div>
                </div>
                <div class="col-6 mb-3">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center py-3">
                            <div class="text-danger">
                                <i class="bi bi-arrow-down fa-lg mb-1"></i>
                            </div>
                            <h6 class="text-muted mb-1">Toplam Gider</h6>
                            <h6 class="text-danger mb-0">
                                ‚Ç∫@Model.Transactions.Where(t => t.Type ==
                                                                C√ºzdan_Uygulamasƒ±.Models.TransactionType.Expense).Sum(t => t.Amount).ToString("N2")
                            </h6>
                        </div </div>
                    </div>
                </div>
            </div>

        <!-- Transaction History -->
        @if (Model.Transactions.Any())
        {
            <div class="installment-card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="bi bi-clock-history me-2"></i>
                            ƒ∞≈ülem Ge√ßmi≈üi (@Model.Transactions.Count() i≈ülem)
                        </h4>
                        <a asp-controller="Transaction" asp-action="Index" class="btn-view-action btn-sm">
                            T√ºm√ºn√º G√∂r
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="transactions-table">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Tarih</th>
                                    <th>T√ºr</th>
                                    <th>Tutar</th>
                                    <th>A√ßƒ±klama</th>
                                    <th>Kategori</th>
                                    <th>ƒ∞≈ülemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var transaction in Model.Transactions.OrderByDescending(t => t.TransactionDate).Take(10))
                                {
                                    <tr>
                                        <td>
                                            <strong>@transaction.TransactionDate.ToString("dd MMM yyyy")</strong>
                                            <br>
                                            <small class="text-muted">@transaction.TransactionDate.ToString("HH:mm")</small>
                                        </td>
                                        <td>
                                            <span class="@(transaction.Type == C√ºzdan_Uygulamasƒ±.Models.TransactionType.Income ? "text-success" : "text-danger")">
                                                <i class="fas @(transaction.Type == C√ºzdan_Uygulamasƒ±.Models.TransactionType.Income ? "fa-arrow-up" : "fa-arrow-down") me-1"></i>
                                                @(transaction.Type == C√ºzdan_Uygulamasƒ±.Models.TransactionType.Income ? "Gelir" : "Gider")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="@(transaction.Type == C√ºzdan_Uygulamasƒ±.Models.TransactionType.Income ? "text-success" : "text-danger")">
                                                <strong>@(transaction.Type == C√ºzdan_Uygulamasƒ±.Models.TransactionType.Income ? "+" : "-")‚Ç∫@transaction.Amount.ToString("N2")</strong>
                                            </span>
                                        </td>
                                        <td>
                                            @transaction.Description
                                            @if (transaction.IsRecurring)
                                            {
                                                <br><small class="text-info"><i class="bi bi-arrow-repeat me-1"></i>Otomatik ƒ∞≈ülem</small>
                                            }
                                        </td>
                                        <td>
                                            @if (transaction.Category != null)
                                            {
                                                <span class="badge bg-light text-dark">@transaction.Category.Name</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-controller="Transaction" asp-action="Details" asp-route-id="@transaction.Id"
                                                    class="btn-view-action btn-sm" title="Detay">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-controller="Transaction" asp-action="Edit" asp-route-id="@transaction.Id"
                                                    class="btn-edit-action btn-sm" title="D√ºzenle">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="installment-card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i>
                        ƒ∞≈ülem Ge√ßmi≈üi
                    </h4>
                </div>
                <div class="card-body empty-state">
                    <i class="bi bi-receipt fa-3x mb-3"></i>
                    <h5>Hen√ºz i≈ülem bulunmuyor</h5>
                    <p>Bu hesapta hen√ºz hi√ß i≈ülem yapƒ±lmamƒ±≈ü.</p>
                    <a asp-controller="Transaction" asp-action="Create" asp-route-accountId="@Model.Id"
                        class="btn-primary-action">
                        <i class="bi bi-plus me-2"></i>ƒ∞lk ƒ∞≈ülemi Ekle
                    </a>
                </div>
            </div>
        }
            </div>
        </div>
    </div>

@section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            // Success/Error messages
            @if (TempData["Success"] != null)
                {
                    <text>
                        Swal.fire({
                            icon: 'success',
                        title: 'Ba≈üarƒ±lƒ±!',
                        text: '@Html.Raw(TempData["Success"])',
                        timer: 3000,
                        showConfirmButton: false
                                                                    });
                    </text>
            }

                @if (TempData["Error"] != null)
                {
                    <text>
                        Swal.fire({
                            icon: 'error',
                        title: 'Hata!',
                        text: '@Html.Raw(TempData["Error"])'
                                                                    });
                    </text>
            }
        </script>
}